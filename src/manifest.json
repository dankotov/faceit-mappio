{
  "name": "FACEIT Mappio",
  "description": "See map-related information in the matchroom and make educated veto decisions.",
  "version": "1.0.0",
  "permissions": ["storage"],
  "host_permissions": [
    "https://api.faceit.com/*",
    "https://open.faceit.com/*",
    "https://www.faceit.com/*"
  ],
  "background": {
    "service_worker": "background.js"
  },
  "content_scripts": [
    {
      "matches": ["https://www.faceit.com/*"],
      "js": ["content.js"],
      "run_at": "document_end"
    }
  ],
  "action": {
    "default_icon": {
      "16": "assets/icons/icon16.png",
      "32": "assets/icons/icon32.png",
      "48": "assets/icons/icon48.png",
      "128": "assets/icons/icon128.png"
    },
    "default_popup": "popup.html"
  },
  "icons": {
    "16": "assets/icons/icon16.png",
    "32": "assets/icons/icon32.png",
    "48": "assets/icons/icon48.png",
    "128": "assets/icons/icon128.png"
  },
  "manifest_version": 3
}
